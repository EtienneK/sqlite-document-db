{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [ "ES2015" ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
